@inject ERPv1.Data.ApplicationDbContext _dbcontex
@model dynamic
@{ 
    var Brand = _dbcontex.Brands.Select(x => new SelectListItem
    {
        Value = x.Id.ToString(),
        Text = x.BrandName
    }
    ).OrderBy(x => x.Text).ToList();

}
@{ 
    var htmlAtt = ViewData["htmlAtt"] ?? new { };

}
@Html.DropDownList("", Brand, "--اختار--", htmlAtt)

