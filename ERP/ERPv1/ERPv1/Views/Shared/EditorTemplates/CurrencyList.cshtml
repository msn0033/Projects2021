@inject ERPv1.Data.ApplicationDbContext _dbcontex
@model dynamic
@{ 
    var currency = _dbcontex.Currency.Select(x => new SelectListItem
    {
        Value = x.Id.ToString(),
        Text = x.CurrencyNameAr
    }
    ).OrderBy(x => x.Text).ToList();

}
@{ 
    var htmlAtt = ViewData["htmlAtt"] ?? new { };

}
@Html.DropDownList("",currency, "--اختار--", htmlAtt)

