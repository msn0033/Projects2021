@inject ERPv1.Data.ApplicationDbContext _dbcontex
@model dynamic
@{ 
    var branch = _dbcontex.Branch.Select(x => new SelectListItem
    {
        Value = x.Id.ToString(),
        Text = x.BranchName
    }
    ).OrderBy(x => x.Text).ToList();

}
@{ 
    var htmlAtt = ViewData["htmlAtt"] ?? new { };

}
@Html.DropDownList("",branch, "--اختار--", htmlAtt)

