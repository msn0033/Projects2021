@inject ERPv1.Data.ApplicationDbContext _dbcontex
@model dynamic
@{ 
    var bank = _dbcontex.AccountChart.Where(x=>x.ParentAcNum== "1220000000").Select(x => new SelectListItem
    {
        Value = x.AccNum.ToString(),
        Text = x.AccountName +" - "+x.AccountNameAr + " "+"( "+x.Balance+" )",
    }
    ).OrderBy(x => x.Text).ToList();

}
@{ 
    var htmlAtt = ViewData["htmlAtt"] ?? new { };

}
@Html.DropDownList("", bank, "--اختار--", htmlAtt)

