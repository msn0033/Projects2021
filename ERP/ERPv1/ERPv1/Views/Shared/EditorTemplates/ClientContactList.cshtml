@inject ERPv1.Data.ApplicationDbContext _dbcontex
@model dynamic
@{ 
    var client = _dbcontex.Contacts
        .Where(x=>x.IsClient)
       
        .Select(x => new SelectListItem
        {
            Value = x.Id.ToString(),
            Text = x.Id+" - "+x.NameAr
        }
    ).OrderBy(x => x.Value).ToList();

}
@{ 
    var htmlAtt = ViewData["htmlAtt"] ?? new { };

}
@Html.DropDownList("", client, "--اختار--",htmlAtt)

