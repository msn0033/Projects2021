@inject ERPv1.Data.ApplicationDbContext _dbcontex
@model dynamic
@{ 
    var Store = _dbcontex.Repository.Select(x => new SelectListItem
    {
        Value = x.RepositoryId.ToString(),
        Text = x.RepositoryName
    }
    ).OrderBy(x => x.Text).ToList();

}
@{ 
    var htmlAtt = ViewData["htmlAtt"] ?? new { };

}
@Html.DropDownList("", Store, "--اختار--", htmlAtt)

