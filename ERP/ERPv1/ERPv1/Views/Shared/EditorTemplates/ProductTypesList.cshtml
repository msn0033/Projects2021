@inject ERPv1.Data.ApplicationDbContext _dbcontex
@model dynamic
@{ 
    var Product = _dbcontex.ProductTypes.Select(x => new SelectListItem
    {
        Value = x.Id.ToString(),
        Text = x.ProductTypeName
    }
    ).OrderBy(x => x.Text).ToList();

}
@{ 
    var htmlAtt = ViewData["htmlAtt"] ?? new { };

}
@Html.DropDownList("", Product, "--اختار--", htmlAtt)

