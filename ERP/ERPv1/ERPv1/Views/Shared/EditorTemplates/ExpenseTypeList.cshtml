@inject ERPv1.Data.ApplicationDbContext _dbcontex
@model dynamic
@{ 
    var ExpenseTypes = _dbcontex.ExpenseTypes.Select(x => new SelectListItem
    {
        Value = x.Id.ToString(),
        Text = x.ExpenseTypeName
    }
    ).OrderBy(x => x.Text).ToList();

}
@{ 
    var htmlAtt = ViewData["htmlAtt"] ?? new { };

}
@Html.DropDownList("", ExpenseTypes, "--اختار--", htmlAtt)

