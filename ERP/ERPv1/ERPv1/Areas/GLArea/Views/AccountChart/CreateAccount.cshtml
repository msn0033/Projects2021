@model ERPv1.ERP.GeneralLedgerModule.AccountCharts.ViewModel.CreateAccountVM

@{
    ViewData["Title"] = "CreateAccount";
}
    <form asp-action="CreateAccount">
        <div class="Card">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="container">
                <div class="card-header">
                    <div class="card-title">
                        <h3>حساب جديد</h3>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="AccountName" class="control-label"></label>
                                <input asp-for="AccountName" class="form-control" />
                                <span asp-validation-for="AccountName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="AccountNameAr" class="control-label"></label>
                                <input asp-for="AccountNameAr" class="form-control" />
                                <span asp-validation-for="AccountNameAr" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="AccTypeId" class="control-label"></label>
                                @Html.EditorFor(x => x.AccTypeId, "AccountTypeList", new { htmlAtt = new { @class = "form-control" } })
                                <span asp-validation-for="AccTypeId" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <div class="container">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="CurrencyId" class="control-label"></label>
                                @Html.EditorFor(x => x.CurrencyId, "CurrencyList", new { htmlAtt = new { @class = "form-control" } })
                                <span asp-validation-for="CurrencyId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="BranchId" class="control-label"></label>
                                @Html.EditorFor(x=>x.BranchId,"BranchList",new { htmlAtt = new { @class = "form-control" } })
                                <span asp-validation-for="BranchId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-4">

                        </div>

                    </div>
                </div>
                <div class="card-footer text-center text-white">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="float-left">Back to List</a>
                </div>
            </div>
        </div>
    </form>
 @section Scripts{ 
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
 }


