@model IEnumerable<ERPv1.ERP.GeneralLedgerModule.AccountCharts.ViewModel.AccountListVM>

@{
    ViewData["Title"] = "Index";
}‌

<div class="card">
    <div class="card-header bg-primary text-white"> 
        <div class="card-title d-flex justify-content-start">

            <span class="fas fa-list"> </span> &nbsp;&nbsp;
            <b>شجرة الحسابات</b>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover table-sm dataTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AccNum)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountNameAr)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccTypeNameAr)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.StartingBalance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Balance)
                    </th>
                    @*<th>
            @Html.DisplayNameFor(model => model.IsParent)
        </th>*@

                    <th>
                        @Html.DisplayNameFor(model => model.CurrencyAbbr)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BranchName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountNameAr)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.AccTypeNameAr)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.StartingBalance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Balance)
                    </td>
                    @*<td>
            @Html.DisplayFor(modelItem => item.IsParent)
        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrencyAbbr)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BranchName)
                    </td>
                    <td>
                        <partial name="_edit" model="@item.AccNum" />
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer text-center">

        <a asp-action="CreateAccount" class="btn btn-primary text-white">Create New</a>
    </div>
</div>


