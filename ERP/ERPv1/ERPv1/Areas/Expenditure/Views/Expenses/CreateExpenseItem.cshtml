@model ERPv1.ERP.PurchasesModule.ViewModel.Expense.ExpenseCreationVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ExpenseItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateExpenseItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExpenseName" class="control-label"></label>
                <input asp-for="ExpenseName" class="form-control" />
                <span asp-validation-for="ExpenseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseTypeId" class="control-label"></label>
                @Html.EditorFor(x => x.ExpenseTypeId, "ExpenseTypeList", new{ htmlAtt = new { @class="form-control"} })

            </div>
            <div class="form-group">
                <input type="submit" value="حـفـظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

